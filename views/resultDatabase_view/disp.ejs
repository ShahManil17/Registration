<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Data</title>
    <style>
         h1, h2 {
            text-align: center;
        }
        h2 {
            margin-bottom: 15px;
        }
        table, tr, th, td {
            border: 1px solid black;
        }
        table {
            margin: 0 auto;
        }
        tr, th, td {
            padding: 20px;
            text-align: center;
        }
        .parent {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 0 150px 20px 150px;
        }
        .child {
            width: 20%;
        }
    </style>
</head>
<body>
    <h1>
        Manil Shah - 24DEV040
    </h1>
    <h2>
        Result Table
    </h2>
    <div class="parent">
        <% if(no==1) { %>
        <div class="child">
            <a href="/resultDatabase?id=home">
                <button disabled><<</button>
            </a>
        </div>
        <div class="child">
            <a href="/resultDatabase?id=prev">
                <button disabled><</button>
            </a>
        </div>
        <% } else { %>
            <div class="child">
                <a href="/resultDatabase?id=home&ct=<%= counter %>&pg=<%= no %>">
                    <button><<</button>
                </a>
            </div>
            <div class="child">
                <a href="/resultDatabase?id=prev&ct=<%= counter %>&pg=<%= no %>">
                    <button><</button>
                </a>
            </div>
        <% } %>
        <div class="child">
            <p><%= Number(no) %></p>
        </div>
        <% if(no==4) { %>
            <div class="child">
                <a href="/resultDatabase?id=next">
                    <button disabled>></button>
                </a>
            </div>
            <div class="child">
                <a href="/resultDatabase?id=end">
                    <button disabled>>></button>
                </a>
            </div>
        <% } else { %>
            <div class="child">
                <a href="/resultDatabase?id=next&ct=<%= counter %>&pg=<%= Number(no) %>">
                    <button>></button>
                </a>
            </div>
            <div class="child">
                <a href="/resultDatabase?id=end&ct=<%= counter %>&pg=<%= Number(no) %>">
                    <button>>></button>
                </a>
            </div>
        <% } %>
    </div>
    <table cellspacing="0">
        <tr>
            <th rowspan="2">sid</th>
            <th rowspan="2">First Name</th>
            <th rowspan="2">Last Name</th>
            <th colspan="3">Terminal</th>
            <th colspan="3">Prelim</th>
            <th colspan="3">Final</th>
            <th colspan="3">Total</th>
            <th rowspan="2">View More</th>
        </tr>
        <tr>
            <th>Theory</th>
            <th>Practical</th>
            <th>Total</th>
            <th>Theory</th>
            <th>Practical</th>
            <th>Total</th>
            <th>Theory</th>
            <th>Practical</th>
            <th>Total</th>
            <th>Theory</th>
            <th>Practical</th>
            <th>Total</th>
        </tr>
        <% for(let i=0; i<data.length; i++) { %>
            <tr>
                <td><%= data[i].sid %></td>
                <td><%= data[i].f_name %></td>
                <td><%= data[i].l_name %></td>
                <td><%= data[i].terminal_theory %></td>
                <td><%= data[i].terminal_practical %></td>
                <td><%= data[i].terminal_theory+data[i].terminal_practical %></td>
                <td><%= data[i].prelim_theory %></td>
                <td><%= data[i].prelim_practical %></td>
                <td><%= data[i].prelim_theory+data[i].prelim_practical %></td>
                <td><%= data[i].final_theory %></td>
                <td><%= data[i].final_practical %></td>
                <td><%= data[i].final_theory+data[i].final_practical %></td>
                <td><%= data[i].terminal_theory+data[i].prelim_theory+data[i].final_theory %></td>
                <td><%= data[i].terminal_practical+data[i].prelim_practical+data[i].final_practical %></td>
                <td><%= (data[i].terminal_theory+data[i].prelim_theory+data[i].final_theory)+data[i].terminal_practical+data[i].prelim_practical+data[i].final_practical %></td>
                <td><a href="allData/<%= data[i].sid %>" target="_blank">View More</a></td>
            </tr>
        <% } %>
    </table>
</body>
</html>